{
  "name": "thallium",
  "version": "0.0.20",
  "description": "A simple, unopinionated, modular test framework",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . && coffeelint .",
    "phantom": "node scripts/generate-browser-entry.js && phantomjs node_modules/mocha-phantomjs-core/mocha-phantomjs-core.js test/index.html dot",
    "test": "npm run lint && mocha"
  },
  "browser": {
    "./lib/inspect.js": "./lib/inspect-browser.js",
    "./lib/reporter/console.js": "./lib/reporter/browser.js"
  },
  "files": [
    "assertions.d.ts",
    "assertions.js",
    "core.d.ts",
    "core.js",
    "index.d.ts",
    "index.js",
    "lib",
    "bin",
    "r",
    "docs"
  ],
  "bin": {
    "tl": "bin/thallium.js",
    "thallium": "bin/thallium.js",
    "_thallium": "bin/_thallium.js"
  },
  "keywords": [
    "test",
    "testing",
    "tdd",
    "thallium"
  ],
  "author": "Isiah Meadows <me@isiahmeadows.com>",
  "license": "ISC",
  "devDependencies": {
    "coffee-script": "^1.10.0",
    "coffeelint": "^1.15.7",
    "es6-promise": "^3.2.1",
    "eslint": "^2.6.0",
    "eslint-config-isiahmeadows": "^0.1.6",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^1.0.1",
    "karma-mocha": "^1.0.1",
    "mkdirp": "^0.5.1",
    "mocha": "^2.3.4",
    "mocha-phantomjs-core": "^1.3.1",
    "phantomjs-prebuilt": "^2.1.7",
    "systemjs": "^0.19.29"
  },
  "dependencies": {
    "bluebird": "^3.3.4",
    "diff": "^2.2.2",
    "from2": "^2.1.1",
    "glob": "^7.0.3",
    "glob-stream": "^5.3.2",
    "interpret": "^1.0.0",
    "minimatch": "^3.0.0",
    "resolve": "^1.1.7",
    "supports-color": "^3.1.2",
    "through2": "^2.0.1",
    "util-inspect": "^0.1.8"
  },
  "directories": {
    "lib": "lib",
    "doc": "docs",
    "example": "docs/examples"
  },
  "repository": "isiahmeadows/thallium",
  "bugs": "https://github.com/isiahmeadows/thallium/issues",
  "homepage": "https://github.com/isiahmeadows/thallium#readme"
}
