{
  "name": "thallium",
  "version": "0.0.18",
  "description": "A simple, unopinionated, modular test framework",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . && coffeelint .",
    "test": "npm run lint && mocha"
  },
  "testling": {
    "browsers": [
      "ie/10..latest",
      "edge/latest",
      "chrome/20..canary",
      "firefox/10..nightly",
      "safari/latest",
      "opera/17.0..next",
      "iphone/6",
      "ipad/6"
    ],
    "files": [
      "test/assertions/**/*.js",
      "test/core/**/*.js",
      "test/reporters/tap.js",
      "test/*.js"
    ],
    "harness": "mocha"
  },
  "files": [
    "assertions.d.ts",
    "assertions.js",
    "core.d.ts",
    "core.js",
    "index.d.ts",
    "index.js",
    "lib",
    "bin",
    "r",
    "docs"
  ],
  "bin": {
    "tl": "bin/thallium.js",
    "thallium": "bin/thallium.js",
    "_thallium": "bin/_thallium.js"
  },
  "keywords": [
    "test",
    "testing",
    "tdd",
    "thallium"
  ],
  "author": "Isiah Meadows <me@isiahmeadows.com>",
  "license": "ISC",
  "devDependencies": {
    "coffee-script": "^1.10.0",
    "coffeelint": "^1.15.7",
    "eslint": "^2.6.0",
    "eslint-config-isiahmeadows": "^0.1.6",
    "minimatch": "^3.0.0",
    "mocha": "^2.3.4"
  },
  "dependencies": {
    "bluebird": "^3.3.4",
    "diff": "^2.2.2",
    "glob-stream": "^5.3.2",
    "interpret": "^1.0.0",
    "resolve": "^1.1.7",
    "supports-color": "^3.1.2"
  },
  "directories": {
    "lib": "lib",
    "doc": "docs",
    "example": "docs/examples"
  },
  "repository": "isiahmeadows/thallium",
  "bugs": "https://github.com/isiahmeadows/thallium/issues",
  "homepage": "https://github.com/isiahmeadows/thallium#readme"
}
